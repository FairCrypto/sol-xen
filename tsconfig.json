{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "strict": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "./node_modules"
  ]
}

